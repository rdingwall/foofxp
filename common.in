# Compiler.
CC = gcc
CXX = g++

# Compiler flags.
#
# -g = debugging symbols for GDB
# -Wall = all warnings
# -pedantic = even more warnings (nazi mode for strict code)
# -Wno-long-long = disable warnings for long long data types
#
FLAGS = -g -Wall -pedantic -Wno-long-long

# Path to directory where Boost headers may be found.
BOOST_INCLUDE_DIR = /usr/local/include/boost-1_35/

# Path to directory where Boost libraries may be found.
BOOST_LIB_DIR = /usr/local/lib/

# Path to directory where the thread safe version of boost signals can be found.
BOOST_THREAD_SAFE_SIGNALS_INCLUDE_DIR = /Users/richard/Development/thread_safe_signals/

